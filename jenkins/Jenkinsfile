node {
    def GIT_COMMIT = sh( script: 'git rev-parse HEAD', returnStdout: true ).trim()
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
        app = docker.build("jacksontong/yii2-basic-app")
    }

    stage('Test') {
        app.inside {
            sh 'vendor/bin/codecept run'
        }
    }
}
