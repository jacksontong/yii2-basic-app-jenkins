pipeline {
    node {
        def image = docker.build("jacksontong/yii-basic-app:latest")

        image.inside {
            sh 'php -v'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh './get-composer.sh'
                sh 'php composer.phar update --dev --prefer-dist --no-interaction'
            }
        }
        stage('Test') {
            steps {
                sh 'vendor/bin/codecept run'
            }
        }
    }
}
